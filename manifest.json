{
   "browser_action": {
      "default_icon": "img/icon.png",
      "default_popup": "popup.html",
      "default_title": "Get ownCloud Bookmarks"
   },
   "description": "Provides convenient access to ownCloud Bookmarks. To use this application you need to have access to ownCloud installation with Bookmarks extension enabled",
   "icons": {
      "128": "img/icon_128.png",
      "16": "img/icon_16.png",
      "48": "img/icon_48.png"
   },
   "manifest_version": 2,
   "name": "ownCloud Bookmarks",
   "options_page": "options.html",
   "permissions": [ "https://*/*", "storage", "bookmarks" ],
   "update_url": "http://amhorwood.plus.com/ocbk/updateInfo.xml",
   "version": "0.1.0"
}
